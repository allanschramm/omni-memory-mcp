{
  "name": "@sharkdyt/omni-memory-mcp",
  "version": "1.0.3",
  "description": "Universal memory MCP server for multi-agent AI workflows. 100% local with SQLite + FTS5.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "omni-memory-mcp": "dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "tsc --noEmit",
    "mcp:generate": "node scripts/generate-mcp-configs.mjs",
    "mcp:validate": "node scripts/validate-mcp-configs.mjs",
    "prepack": "npm run build",
    "prepublishOnly": "npm run check && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "memory",
    "sqlite",
    "fts5",
    "agent",
    "ai",
    "local"
  ],
  "author": "Allan Schramm",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allanschramm/omni-memory-mcp.git"
  },
  "homepage": "https://github.com/allanschramm/omni-memory-mcp#readme",
  "bugs": {
    "url": "https://github.com/allanschramm/omni-memory-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
