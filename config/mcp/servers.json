{
  "version": 1,
  "profiles": {
    "opencode": {
      "enableDialects": ["array", "string-args"],
      "enableFallbackDist": true,
      "distPathWindows": "C:\\Users\\your-user\\.local\\mcp\\omni-memory-mcp\\dist\\index.js",
      "distPathPosix": "/home/your-user/.local/mcp/omni-memory-mcp/dist/index.js"
    }
  },
  "servers": [
    {
      "id": "omni-memory",
      "transport": "local",
      "command": "npx",
      "args": ["-y", "@sharkdyt/omni-memory-mcp"],
      "env": {
        "OMNI_MEMORY_DIR": "${HOME}/.omni-memory"
      },
      "enabled": true,
      "timeoutMs": 5000
    }
  ]
}
