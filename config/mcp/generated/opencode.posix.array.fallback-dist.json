{
  "mcp": {
    "omni-memory": {
      "type": "local",
      "command": [
        "sh",
        "-lc",
        "npx -y @sharkdyt/omni-memory-mcp || node /home/your-user/.local/mcp/omni-memory-mcp/dist/index.js"
      ],
      "environment": {
        "OMNI_MEMORY_DIR": "/home/your-user/.omni-memory"
      },
      "enabled": true,
      "timeout": 5000
    }
  }
}
